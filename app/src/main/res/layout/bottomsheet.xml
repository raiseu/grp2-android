<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    app:behavior_hideable="false"
    app:behavior_peekHeight="28dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <!--<androidx.cardview.widget.CardView
        android:layout_width="718dp"
        android:layout_height="104dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="1dp"
        app:cardElevation="20dp">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/dark_blue">

        <!--<View
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/white" />
             -->
        <TextView
            style='@style/TextAppearance.AppCompat.Headline'
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Timers"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="565dp"
        android:background="@color/dark_blue">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="66dp"
            android:background="@color/DARKBLUE"
            android:textColor="@color/white">

            <TextView
                android:id="@+id/txtTimer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="60dp"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="80dp" />

            <Button
                android:id="@+id/startbutton2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="57dp"
                android:layout_marginBottom="127dp"
                android:background="@color/teal_700"
                android:onClick="startTapped2"
                android:text="START"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <Button
                android:id="@+id/button2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="57dp"
                android:layout_marginBottom="61dp"
                android:background="@color/purple_200"
                android:onClick="resetTapped2"
                android:text="RESET"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ImageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:text="Image Recognition Timer"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="369dp"
            android:background="@color/DARKBLUE">


            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="60dp"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="80dp" />

            <Button
                android:id="@+id/startbutton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="57dp"
                android:layout_marginBottom="127dp"
                android:background="@color/teal_700"
                android:onClick="startTapped"
                android:text="START"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="57dp"
                android:layout_marginBottom="61dp"
                android:background="@color/purple_200"
                android:onClick="resetTapped"
                android:text="RESET"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/fastestTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:text="Fastest Path Timer"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <!--</androidx.cardview.widget.CardView>-->


</LinearLayout>